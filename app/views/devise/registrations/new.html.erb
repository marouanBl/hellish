<div class="container modalikebox">
	<span class="header">Sign up</span>

	<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
	  <%= devise_error_messages! %>
	<div class="content">
		<div class="row text-center">
			<input class="span8" id="user_username" name="user[username]" type="text" placeholder="Username">
		</div>

		<div class="row text-center">
			<input class="span4" id="user_name" name="user[name]" type="text" placeholder="First Name">
			&nbsp; &nbsp; &nbsp;
			<input class="span4" id="user_last_name" name="user[last_name]" type="text" placeholder="Last Name">
		</div>

		<div class="row text-center">
			<input class="span8" autofocus="autofocus" id="user_email" name="user[email]" type="email" placeholder="Your E-mail Address">
		</div>

		<div class="row text-center">
			<input id="user_password" name="user[password]" class="span8" type="password" placeholder="Password">
		</div>
		<div class="row text-center">
			<input id="user_password_confirmation" name="user[password_confirmation]" class="span8" type="password" placeholder="Verify your password">
		</div>

		<div class="row text-center">
		  	<input name="commit" type="submit" value="Sign up" class="btn btn-info span4">
			<%= render "devise/shared/links" %>
		</div>
	</div>

		  		

		<div class="clearfix"></div>
	<% end %>
</div>


