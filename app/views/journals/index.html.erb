<div class="container second-floor-bg">
    <h1>Listing journals</h1>

    <table>
      <tr>
        <th>Name</th>
        <th>Description</th>
        <th>User</th>
        <th>Category</th>
        <th>Created at</th>
        <th>Updated at</th>
        <th></th>
        <th></th>
        <th></th>
      </tr>

    <% @journals.each do |journal| %>
      <tr>
        <td><%= journal.name %></td>
        <td><%= journal.description %></td>
        <td><%= journal.user_id %></td>
        <td><%= journal.category_id %></td>
        <td><%= journal.created_at %></td>
        <td><%= journal.updated_at %></td>
        <td><%= link_to 'Show', journal %></td>
        <td><%= link_to 'Edit', edit_journal_path(journal) %></td>
        <td><%= link_to 'Destroy', journal, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <td>
            <% if user_signed_in? %>
              <%= toggle_follow_button(journal, current_user) %>
            <% end %>
        </td>
      </tr>
    <% end %>
    </table>

    <br />

    <%= link_to 'New Journal', new_journal_path %>
</div>