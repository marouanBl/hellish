
<div class="row">
    <div class="span7">
        <table class="table table-striped">
          <thead>
            <tr>
              <th>#</th>
              <th>Username</th>
              <th>First Name</th>
              <th>Last Name</th>
              <th>Member Since</th>
              <th>Number of Articles</th>
            </tr>
          </thead>
          <tbody>
            <% @users.each do |user| %>
            <tr>
              <td><%= user.id %></td>
              <td><%= user.username %></td>
              <td><%= user.name %></td>
              <td><%= user.last_name %></td>
              <td><%= time_ago_in_words(user.created_at) %></td>
              <td>18</td>

            </tr>
            <% end %>
          </tbody>
        </table>
    </div>
    <div class="span1">
    </div>

    <div class="span4">
        <div class="row well">
            <table class="table table-striped">
              <thead>
                <tr>
                  <th>Username</th>
                  <th>State</th>
                  <th>NoA</th>
                  <th>Member Since</th>
                </tr>
              </thead>
              <tbody>
                <% User.limit(5).each do |user| %>
                <tr>
                  <td><%= user.username %></td>
                  <td><%= user.state %></td>
                  <td><%= user.articles.count %></td>
                  <td><%= time_ago_in_words(user.created_at) %></td>
                </tr>
                <% end %>
              </tbody>
            </table>
        </div>

        <% unless current_user.state.nil? %>
        <div class="row">
            <div class="row well">
                <table class="table table-striped">
                  <thead>
                    <tr>
                      <th>Username</th>
                      <th>State</th>
                      <th>Member Since</th>
                    </tr>
                  </thead>
                  <tbody>
                    <% User.limit(5).where("state = "+current_user.state).each do |user| %>
                    <tr>
                      <td><%= user.username %></td>
                      <td><%= user.state %></td>
                      <td><%= time_ago_in_words(user.created_at) %></td>
                    </tr>
                    <% end %>
                  </tbody>
                </table>
            </div>
        </div>
        <% end %>
    </div>
</div>



<% @users.each do |user| %>
  <tr>
    <td><%= user.username %></td>
    <td><%= user.last_name %></td>
    <td><%= user.name %></td>
    <td><%= user.state_id %></td>
    <td><%= user.created_at %></td>
    <td><%= user.updated_at %></td>
    <td><%= link_to 'Show', user %></td>
    <td><%= link_to 'Edit', edit_user_path(user) %></td>
    <td><%= link_to 'Destroy', user, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>

